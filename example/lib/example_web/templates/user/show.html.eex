<h1>Show User</h1>

<ul>
  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Thumbnail:</strong>
    <%= if @user.avatar do %>
      <%= img_tag Upload.Plug.Helpers.variant_path(@conn, @user.avatar, resize: "50x50"), alt: "thumnail" %>
    <% else %>
      <p>This user does not have an avatar.</p>
    <% end %>
  </li>

  <li>
    <strong>Avatar:</strong>
    <%= if @user.avatar do %>
      <%= img_tag Upload.Plug.Helpers.blob_path(@conn, @user.avatar), alt: "avatar" %>
    <% else %>
      <p>This user does not have an avatar</p>
    <% end %>
  </li>
</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
